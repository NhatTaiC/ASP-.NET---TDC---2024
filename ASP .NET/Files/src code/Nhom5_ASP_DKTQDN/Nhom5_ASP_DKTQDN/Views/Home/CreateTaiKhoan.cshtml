@model Nhom5_ASP_DKTQDN.Models.TaiKhoan

@{
    ViewData["Title"] = "Thêm tài khoản";
}

<h1>Thêm tài khoản</h1>

<hr />
<div class="row">
    <div class="col-md-4">
                </div>
    <div class="col-md-4">
        <form asp-action="CreateTaiKhoan">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TenTaiKhoan" class="control-label">Tên tài khoản</label>
                <input asp-for="TenTaiKhoan" class="form-control" />
                <span asp-validation-for="TenTaiKhoan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MatKhau" class="control-label">Mật khẩu</label>
                <input asp-for="MatKhau" class="form-control" />
                <span asp-validation-for="MatKhau" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quyen" class="control-label">Quyền</label>
                <input asp-for="Quyen" class="form-control" />
                <span asp-validation-for="Quyen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="TaiKhoanList">Quay lại</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
